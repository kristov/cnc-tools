#!/usr/bin/env perl

use strict;
use warnings;
use lib qw( lib );
use CNCTool::Options;
use CNCTool::Util;

my $options = CNCTool::Options->new(
    {
        name    => 'file',
        type    => 'file',
        req     => 1,
        desc    => 'Layer file',
    },
);
my $opts = $options->get_options;

my $util = CNCTool::Util->new;
my $pointlist = $util->load_pointlist_file( { file => $opts->{file} } );

print $util->build_gcode_from_pointlist( $pointlist );
