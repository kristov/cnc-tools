#!/usr/bin/env perl

use strict;
use warnings;
use lib qw( lib );
use CNCTool::Options;
use CNCTool::Util;
use CNCTool::App::PathView;

my $options = CNCTool::Options->new(
    {
        name    => 'file',
        type    => 'file',
        req     => 1,
        desc    => 'Layer file',
    },
);
my $opts = $options->get_options;

my $util = CNCTool::Util->new;
my $path = $util->load_path_file( { file => $opts->{file} } );

my $reverse = $path->reverse;

print $util->serialise_path( $reverse ) . "\n";
