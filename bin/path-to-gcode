#!/usr/bin/env perl

use strict;
use warnings;
use lib qw( lib );
use CNCTool::Options;
use CNCTool::Util;

my $options = CNCTool::Options->new(
    {
        name    => 'path',
        type    => 'file',
        req     => 1,
        desc    => 'Layer file',
    },
);
my $opts = $options->get_options;

my $util = CNCTool::Util->new;
my $path = $util->load_path_file( { file => $opts->{path} } );

print $util->build_gcode_from_path( $path );
